@using CQRSBookstore.App.Models;


<h4>Search Results</h4>
@model List<Book>;
<div class="d-flex mt-4">
    @if(Model.Count == 0) {
    <div class="">No Books found! 
        <div>
            Please try again!
        </div>
    </div>
    }
    else{
        @foreach (var book in Model)
            {
            <a  asp-controller="books"  asp-action="@book.Id" style="text-decoration: none;">
            <div class="card" style="">
                <div class="card-body">
                    <h5 class="card-title mr-2">@book.Title</h5>
                    <div class="card-subtitle mb-2 text-muted">By @book.Author</div>
                </div>
            </div>
            </a>
        }
    }
</div>